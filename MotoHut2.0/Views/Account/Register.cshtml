<h2>Registreren</h2>
<form action="@Url.Action("RegisterButton","Account")" method="post">
    <table>
        <tr>
            <td>Naam: </td>
            <td><input type="text" name="txtName" required /></td>
        </tr>
        <tr>
            <td>E-mail </td>
            <td><input type="text" name="txtEmail" required /></td>
        </tr>
        <tr>
            <td>Wachtwoord: </td>
            <td><input type="password" name="txtPassword" required /></td>
        </tr>
        <tr>
            <td>Geboortedatum: </td>
            <td><input type="datetime-local" name="txtBirthdate" required /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Registreer" /></td>
        </tr>
    </table>
    <h4 style="color:darkred">@ViewBag.ErrorMsg</h4>
</form>
