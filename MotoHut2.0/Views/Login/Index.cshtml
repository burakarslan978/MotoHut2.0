@{
    ViewData["Title"] = "Login";
}
<form action="@Url.Action("Login","Login")" method="post">
    <table>
        <tr>
            <td>E-mail </td>
            <td><input type="text" name="txtEmail" required /></td>
        </tr>
        <tr>
            <td>Wachtwoord: </td>
            <td><input type="password" name="txtPassword" required password/></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Login" /></td>
        </tr>   
    </table>
    @ViewBag.ErrorMsg
</form>
